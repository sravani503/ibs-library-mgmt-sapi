title: ibs-library-management-uhub
version: 1.0
baseUri: www.klarttechnologies.com
mediaType: 
 application/json
protocols:
  - HTTP

traits:
  headerdetails: !include /exchange_modules/561eb733-84f7-4bbf-9b9a-a2f1a0fccf08/common-headers/1.0.0/common-headers.raml
  queryP: !include /exchange_modules/561eb733-84f7-4bbf-9b9a-a2f1a0fccf08/queryparams-traits/1.0.0/queryparams-traits.raml

types:
  error-Details: !include /exchange_modules/561eb733-84f7-4bbf-9b9a-a2f1a0fccf08/common-error-response/1.0.1/common-error-response.raml
  201-res: !include /exchange_modules/561eb733-84f7-4bbf-9b9a-a2f1a0fccf08/201-response/1.0.0/201-response.raml
  createBookReq: !include /exchange_modules/561eb733-84f7-4bbf-9b9a-a2f1a0fccf08/create-new-book-input/1.0.2/create-new-book-request.raml
  getLibraries: !include /exchange_modules/561eb733-84f7-4bbf-9b9a-a2f1a0fccf08/getlibrary-by-id/1.0.1/getlibrary-by-id.raml
