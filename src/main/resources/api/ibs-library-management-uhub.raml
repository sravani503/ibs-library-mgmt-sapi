/Libraries:
  get:
    is:
      headerdetails
    responses:
      200:
        body:
          application/json:
            type: getLibraries
/Libraries{LibraryId}:
  get:
    is:
      headerdetails
    responses:
      200:
        body:
          application/json:
            type: getLibraryRes
      404:
        body:
          application/json:
            type: error-Details
/books:
  post:
    description: The resource is used to add a new book into the database
    is:
      - headerdetails
    body:
      application/json:
        description: This is request body section of this create book method or resource
        type: createBookReq
    responses:
      201:
        body:
          application/json:
            type: 201-res
           
      404:
        body:
          application/json:
            type: error-Details
            
  get:
    description: to get book details based on query parameter rating
    is:
      - headerdetails
      - queryP
    responses:
      200:
        body:
          application/json:
            example: !include /example/get-book-info-based-rating.json
            

       
  
        
      

            
                
      